<div>
    <h2>Lender</h2>
    <span style = "color:red"><%= flash[:lender_errors] %></span>
    <span style = "color:green"><%= flash[:lender_success] %></span>
    <form action="/lender" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <p>First Name: <input type="text" name="lender[first_name]"></p>
        <p>Last Name: <input type="text" name="lender[last_name]"></p>
        <p>Email: <input type="email" name="lender[email]"></p>
        <p>Password: <input type="password" name="lender[password]"></p>
        <p>*Password should be at least 8 characters*</p>
        <p>Confirm password: <input type="password" name="password_confirmation" ></p>
        <p>Money: <input type="number" min="5" name="lender[money]">
            </p>
        <p><input type="submit" value="Register"></p>
    </form>
    <a href="/login">Already a member?</a>
</div>
<br>
